                </items>
            </ComboBox>

            <ComboBox id="cbMonth" width="200px" placeholder="Select Month">
                <items>
                    <core:Item key="01" text="January" />
                    <core:Item key="02" text="February" />
                    <core:Item key="03" text="March" />
                </items>
            </ComboBox>
        </items>
    </HBox> -->
     <HBox class="card-container" alignItems="Start" justifyContent="SpaceAround" wrap="Wrap">
        <items>       
         <card:Card id="idWFModel" width="1000px" height="400px"/> 
           
        </items>
    </HBox>
    </VBox>
</VBox>

        </content>
    </Page>
</mvc:View>