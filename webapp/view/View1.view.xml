                <items>
                    <core:Item key="F1" text="Factory 1" />
                    <core:Item key="F2" text="Factory 2" />
                    <core:Item key="F3" text="Factory 3" />
                </items>
            </ComboBox>

            <ComboBox id="cbAssembly" width="200px" placeholder="Select Assembly">
                <items>
                    <core:Item key="A1" text="Assembly 1" />
